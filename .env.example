# Sentinel Environment Configuration
# Copy to .env and fill in your values

# =============================================================================
# Db2 Configuration
# =============================================================================
SENTINEL_DB2_DSN=SENTINELDB
SENTINEL_DB2_HOST=localhost
SENTINEL_DB2_PORT=50000
SENTINEL_DB2_USER=db2inst1
SENTINEL_DB2_PASSWORD=your_password_here
SENTINEL_DB2_POOL_SIZE=5

# =============================================================================
# IBM watsonx / Granite Guardian Configuration
# =============================================================================
SENTINEL_GRANITE_API_KEY=your_api_key_here
SENTINEL_GRANITE_API_ENDPOINT=https://us-south.ml.cloud.ibm.com
SENTINEL_GRANITE_PROJECT_ID=your_project_id_here

# =============================================================================
# Cache Configuration
# =============================================================================
SENTINEL_CACHE_ENABLED=true
SENTINEL_CACHE_TTL=300

# =============================================================================
# Audit Configuration
# =============================================================================
SENTINEL_AUDIT_ENABLED=true
SENTINEL_AUDIT_BATCH_SIZE=10
SENTINEL_AUDIT_FLUSH_INTERVAL=5.0

# =============================================================================
# Application Configuration
# =============================================================================
SENTINEL_LOG_LEVEL=INFO
SENTINEL_DEBUG=false
SENTINEL_API_HOST=0.0.0.0
SENTINEL_API_PORT=8000
SENTINEL_API_WORKERS=4
